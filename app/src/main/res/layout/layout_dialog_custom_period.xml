<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <EditText
            android:theme="@style/AdditionalTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginStart="24dp"
            android:ems="5"
            android:textSize="16sp"
            android:id="@+id/edit_objective_period"
            android:hint="@string/placeholder_period"
            android:autofillHints=""
            android:importantForAutofill="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:id="@+id/spinner_period_type"
            android:entries="@array/objective_period_values"
            app:layout_constraintStart_toEndOf="@id/edit_objective_period"
            app:layout_constraintBaseline_toBaselineOf="@id/edit_objective_period"/>

</androidx.constraintlayout.widget.ConstraintLayout>