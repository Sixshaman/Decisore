<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:layout_margin="16dp" android:id="@+id/layoutDialogNewTask">

    <EditText
            android:theme="@style/AdditionalTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTaskName"
            android:hint="@string/taskName"
            android:autofillHints=""
            android:importantForAutofill="no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:theme="@style/AdditionalTheme"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editTaskDescription"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTaskName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:autofillHints=""
            android:hint="@string/taskDescription"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/layoutSelectTaskType"
            app:layout_constraintTop_toBottomOf="@+id/editTaskDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:text="@string/taskType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTaskType"
                android:layout_marginTop="0dp"
                android:textSize="18sp"/>
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerTaskType"
                android:entries="@array/taskTypes"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/layoutSelectTaskType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/layoutSelectDeferDate">

        <TextView
                android:text="@string/enlistDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDeferTime"
                android:layout_weight="1"
                android:textAlignment="center"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editDeferDate"
                android:layout_weight="1"
                android:autofillHints=""
                android:hint="@string/unixStartDate"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/layoutSelectDeferDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/layoutSelectRepeatInterval">

        <TextView
                android:text="@string/repeat_interval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:id="@+id/textViewRepeatInterval"
                android:layout_weight="1"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:focusable="false">

            <TextView
                    android:text="@string/placeholder_number_of_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:layout_alignBaseline="@id/editTextRepeatInterval"
                    android:ems="10"
                    android:textSize="14sp"
                    android:padding="8sp"
                    android:id="@+id/textViewBackHintAlwaysShown"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:textSize="14sp"
                    android:id="@+id/editTextRepeatInterval"
                    android:autofillHints=""
                    android:padding="8sp"
                    android:hint=""
                    tools:ignore="LabelFor" android:singleLine="true"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>