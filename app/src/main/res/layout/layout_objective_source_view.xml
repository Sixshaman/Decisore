<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="10dp"
                                                   android:id="@+id/layoutScheduledSourceView">

    <ImageView
            android:id="@+id/iconScheduledSource"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_scheduler_pool"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textScheduledSourceName"
            app:layout_constraintBottom_toBottomOf="@+id/textScheduledSourceName"/>

    <TextView android:id="@+id/textScheduledSourceName"
              android:text="@string/placeholderTask"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@android:color/black"
              android:textSize="26sp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toEndOf="@+id/iconScheduledSource"/>

</androidx.constraintlayout.widget.ConstraintLayout>